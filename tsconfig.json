{
  // target all ts files
  "include": [
    "src"
  ],
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "useUnknownInCatchVariables": true
  }
}
